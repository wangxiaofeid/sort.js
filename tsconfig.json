{
    "compilerOptions": {
      "outDir": "./lib",  
      "strictNullChecks": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "noImplicitAny": true,
      "target": "es5",
      "lib": [
        "es6",
        "es7"
      ],
      "inlineSourceMap": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }